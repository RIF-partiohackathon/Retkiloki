<p id="notice"><%= notice %></p>

<h1>Listing Attendances</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <% if attendance.user %>  
        <tr>
          <td><%= attendance.user.name%></td>
          <td><%= attendance.startdate %></td>
          <td><%= attendance.enddate %></td>
          <td><%= attendance.event%></td>
          <td><%= link_to 'Show', attendance, class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to 'Edit', edit_attendance_path(attendance), class: 'btn btn-warning btn-xs' %></td>
          <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path, class:'btn btn-primary' %>