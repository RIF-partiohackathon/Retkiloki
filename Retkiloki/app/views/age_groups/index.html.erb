<p id="notice"><%= notice %></p>

<h1>Listing Age Groups</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @age_groups.each do |age_group| %>
      <tr>
        <td><%= age_group.group %></td>
          <td><%= link_to 'Show', age_group, class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to 'Edit', edit_age_group_path(age_group), class: 'btn btn-warning btn-xs' %></td>
          <td><%= link_to 'Destroy', age_group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Age group', new_age_group_path, class:'btn btn-primary' %>
