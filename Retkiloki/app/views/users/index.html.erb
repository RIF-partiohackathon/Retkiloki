<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table id="usertable" class="table table-hover">
 <thead>
  <tr>
    <th><a href="#" id="name">Name</a></th>
    <th><a href="#" id="age_group">Age Group</a></th>
    <th><a href="#" id="phone">Phone Number</a></th>
    <th><a href="#" id="email">Email</a></th>
    <th><a>Show</a></th>
    <th><a>Edit</a></th>
    <th><a>Destroy</a></th>
  </tr>
</thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.age_group %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
