<p id="notice"><%= notice %></p>

<h1>Listing Venues</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.address %></td>
        <td><%= venue.owner %></td>
        <td><%= link_to 'Show', venue, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venue', new_venue_path, class:'btn btn-primary' %>
