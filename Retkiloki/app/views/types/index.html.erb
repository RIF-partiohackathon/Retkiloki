<p id="notice"><%= notice %></p>

<h1>Listing Types</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Type</th>
      <th colspan="3"></th>
      <th>Metsässä?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.in_woods %></td>
        <td><%= link_to 'Show', type, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_event_path(type), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Type', new_type_path, class:'btn btn-primary' %>
