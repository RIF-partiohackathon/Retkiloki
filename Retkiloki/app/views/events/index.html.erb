<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Attendees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.startdate %></td>
        <td><%= event.enddate %></td>
        <td><%= event.attendees %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class:'btn btn-primary' %>
